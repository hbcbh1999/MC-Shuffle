\RequirePackage{tikz}

%/////////////////////////////////////////////////////////////////////////////
% define some spatial metrics.
\pgfmathsetmacro{\cardwidth}{1.4}
\pgfmathsetmacro{\cardheight}{2.0}
\pgfmathsetmacro{\textpadding}{0.1}
\pgfmathsetmacro{\drawpadding}{0.5}

%/////////////////////////////////////////////////////////////////////////////
% define colors.
\definecolor{myred}{rgb}{0.8,0.1,0.1}
\definecolor{thinyellow}{rgb}{1,1,0.85}
\definecolor{thinblue}{rgb}{0.75,0.75,1}

%/////////////////////////////////////////////////////////////////////////////
% define somes symbols.
\DeclareSymbolFont{extraup}{U}{zavm}{m}{n}
\DeclareMathSymbol{\varheart}{\mathalpha}{extraup}{86}
\DeclareMathSymbol{\vardiamond}{\mathalpha}{extraup}{87}

%/////////////////////////////////////////////////////////////////////////////
% define commands to create cards.
% \cardd, \cards, \cardh, \cardc for basic diamond, spade, heart, club cards
% \dcardd, \dcards, \dcardh, \dcardc for highlighted cards.
% \cardslot for a blank slots

% blank slot
\newcommand{\cardslot}{
	\begin{tikzpicture}
	    \draw[rounded corners=0.2cm, thinblue] (0,0) rectangle (\cardwidth,\cardheight);
\end{tikzpicture}}

% --------------------------------------------------------------------------------
% normal cards
\newcommand{\cardd}[1]{
	\begin{tikzpicture}
	    \draw[rounded corners=0.2cm] (0,0) rectangle (\cardwidth,\cardheight);
	    \node[text width=0.4cm,below right, myred] at (\textpadding,\cardheight-\textpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\vardiamond$}\\ \vspace{0.15cm}};
\end{tikzpicture}}

\newcommand{\cards}[1]{
	\begin{tikzpicture}
	    \draw[rounded corners=0.2cm] (0,0) rectangle (\cardwidth,\cardheight);
	    \node[text width=0.4cm,below right] at (\textpadding,\cardheight-\textpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\spadesuit$}\\ \vspace{0.15cm}};
\end{tikzpicture}}

\newcommand{\cardh}[1]{
	\begin{tikzpicture}
	    \draw[rounded corners=0.2cm] (0,0) rectangle (\cardwidth,\cardheight);
	    \node[text width=0.4cm,below right, myred] at (\textpadding,\cardheight-\textpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\varheart$}\\ \vspace{0.15cm}};
\end{tikzpicture}}

\newcommand{\cardc}[1]{
	\begin{tikzpicture}
	    \draw[rounded corners=0.2cm] (0,0) rectangle (\cardwidth,\cardheight);
	    \node[text width=0.4cm,below right] at (\textpadding,\cardheight-\textpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\clubsuit$}\\ \vspace{0.15cm}};
\end{tikzpicture}}

% --------------------------------------------------------------------------------
% highlighted cards
\newcommand{\dcardd}[1]{
	\begin{tikzpicture}
		\draw[rounded corners=0.2cm, white] (0,0) rectangle (\cardwidth,\cardheight);
	    \draw[rounded corners=0.2cm, fill=thinyellow] (0,\drawpadding) rectangle (\cardwidth,\cardheight+\drawpadding);
	    \node[text width=0.4cm,below right, myred] at (\textpadding,\cardheight-\textpadding+\drawpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\vardiamond$}\\ \vspace{0.15cm}};
\end{tikzpicture}}

\newcommand{\dcards}[1]{
	\begin{tikzpicture}
		\draw[rounded corners=0.2cm, white] (0,0) rectangle (\cardwidth,\cardheight);
	    \draw[rounded corners=0.2cm, fill=thinyellow] (0,\drawpadding) rectangle (\cardwidth,\cardheight+\drawpadding);
	    \node[text width=0.4cm,below right] at (\textpadding,\cardheight-\textpadding+\drawpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\spadesuit$}\\ \vspace{0.15cm}};
\end{tikzpicture}}

\newcommand{\dcardh}[1]{
	\begin{tikzpicture}
		\draw[rounded corners=0.2cm, white] (0,0) rectangle (\cardwidth,\cardheight);
	    \draw[rounded corners=0.2cm, fill=thinyellow] (0,\drawpadding) rectangle (\cardwidth,\cardheight+\drawpadding);
	    \node[text width=0.4cm,below right, myred] at (\textpadding,\cardheight-\textpadding+\drawpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\varheart$}\\ \vspace{0.15cm}};
\end{tikzpicture}}

\newcommand{\dcardc}[1]{
	\begin{tikzpicture}
		\draw[rounded corners=0.2cm, white] (0,0) rectangle (\cardwidth,\cardheight);
	    \draw[rounded corners=0.2cm, fill=thinyellow] (0,\drawpadding) rectangle (\cardwidth,\cardheight+\drawpadding);
	    \node[text width=0.4cm,below right] at (\textpadding,\cardheight-\textpadding+\drawpadding) {
	        {\Large \resizebox{10pt}{11pt}{#1}}\\ {\Large $\clubsuit$}\\ \vspace{0.15cm}};
\end{tikzpicture}}


